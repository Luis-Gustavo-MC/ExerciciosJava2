import java.util.Scanner;

/*Fazer um programa para ler o código de uma peça 1, o número de peças 1, o valor unitário de cada peça 1, o
código de uma peça 2, o número de peças 2 e o valor unitário de cada peça 2. Calcule e mostre o valor a ser pago.*/

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int codigo1, codigo2, n1, n2;
		float valor1 , valor2;
		float totalA , totalB, total;
		System.out.println("Informe o codigo da peça 1, no numero de peças, e o valor unitario");
		codigo1 = sc.nextInt();
		n1 = sc.nextInt();
		valor1 = sc.nextFloat();
		System.out.println("Informe o codigo da peça 2, no numero de peças, e o valor unitario");
		codigo2 = sc.nextInt();
		n2 = sc.nextInt();
		valor2 = sc.nextFloat();
		totalA = n1 * valor1;
		totalB = n2 * valor2;
		total = totalA + totalB;
		
		System.out.println("Valor Final: " + total);
		
		sc.close();
	}
}
